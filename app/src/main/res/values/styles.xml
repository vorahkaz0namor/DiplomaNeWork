<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.NeWorkButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/zero_dp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@color/ripple_button</item>
        <item name="iconPadding">@dimen/main_indent</item>
        <item name="android:paddingTop">@dimen/zero_dp</item>
        <item name="android:paddingBottom">@dimen/zero_dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/custom_transparent</item>
    </style>

    <style name="Widget.AppTheme.MenuButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="iconPadding">@dimen/zero_dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="tint">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="iconTint">@color/color_like_button</item>
        <item name="android:checkable">true</item>
        <item name="icon">@drawable/like_selector</item>
        <item name="contentDescription">@string/likes_count</item>
    </style>

    <style name="Widget.AppTheme.EventTypeIndicator" parent="Widget.AppTheme.NeWorkButton">
        <item name="android:clickable">false</item>
        <item name="iconTint">@color/green</item>
        <item name="icon">@drawable/ic_event_type_32</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="Widget.AppTheme.EventTypeChooser" parent="Widget.AppTheme.NeWorkButton">
        <item name="android:checkable">true</item>
        <item name="rippleColor">@color/custom_transparent</item>
        <item name="iconTint">@color/color_type_chooser</item>
        <item name="icon">@drawable/chooser_selector</item>
    </style>

    <style name="Widget.AppTheme.ParticipantsIndicator" parent="Widget.AppTheme.NeWorkButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="iconSize">@dimen/scrollbar_width</item>
        <item name="iconPadding">@dimen/title_indent</item>
    </style>

    <style name="Widget.AppTheme.NeWorkDelimiter" parent="Widget.AppTheme.ParticipantsIndicator">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:padding">@dimen/zero_dp</item>
    </style>

    <style name="Widget.AppTheme.AttendInButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="icon">@drawable/attend_in_selector</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/zero_dp</item>
        <item name="android:checkable">true</item>
        <item name="android:backgroundTint">@color/custom_transparent</item>
        <item name="contentDescription">@string/participated_by_me</item>
    </style>

    <style name="Widget.AppTheme.ClearPreviewButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="backgroundTint">@color/ripple_button</item>
    </style>

    <style name="Widget.AppTheme.NeWorkActionButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="android:checkable">true</item>
        <item name="iconPadding">@dimen/zero_dp</item>
        <item name="iconTint">@color/color_selection_menu_item</item>
    </style>

    <style name="Widget.AppTheme.CoverEventButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cover_skeleton</item>
        <item name="backgroundTint">@color/cover_background</item>
        <item name="icon">@drawable/ic_add_from_camera_32</item>
        <item name="iconSize">@dimen/avatar_size</item>
        <item name="iconGravity">textTop</item>
        <item name="android:text">@string/upload_cover_event</item>
        <item name="contentDescription">@string/place_for_cover</item>
    </style>

    <style name="Widget.AppTheme.NeWorkOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="strokeColor">?attr/colorControlNormal</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="rippleColor">@color/ripple_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.AppTheme.NeWorkCardFrame" parent="Widget.AppTheme.NeWorkOutlinedButton">
        <item name="android:clickable">false</item>
        <item name="cornerRadius">@dimen/card_padding</item>
        <item name="strokeColor">@color/card_frame</item>
        <item name="android:insetTop">@dimen/zero_dp</item>
    </style>

    <style name="Widget.AppTheme.NeWorkFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="android:tint">?attr/colorControlNormal</item>
        <item name="android:backgroundTint">@color/ripple_button</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">@dimen/title_size</item>
        <item name="layout_constraintHeight">@dimen/constraint_height</item>
        <item name="android:padding">@dimen/zero_dp</item>
        <item name="borderWidth">@dimen/zero_dp</item>
        <item name="android:strokeColor">@color/ripple_button</item>
    </style>

    <style name="Widget.AppTheme.NeWorkOutlinedTextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/ripple_button</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:paddingBottom">@dimen/title_indent</item>
    </style>

    <style name="Widget.AppTheme.NeWorkRoundedOutlined" parent="Widget.AppTheme.NeWorkOutlinedTextInput">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingStart">@dimen/main_indent</item>
        <item name="android:paddingEnd">@dimen/main_indent</item>
    </style>

    <style name="Widget.AppTheme.DatetimeSection" parent="Widget.AppTheme.NeWorkOutlinedTextInput">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/start_section_height</item>
        <item name="android:enabled">false</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="Widget.AppTheme.NeWorkDatetimeInput" parent="Widget.AppTheme.NeWorkOutlinedTextInput">
        <item name="expandedHintEnabled">false</item>
        <item name="android:layout_width">@dimen/start_section_height</item>
        <item name="android:paddingBottom">@dimen/card_padding</item>
    </style>

    <style name="Widget.AppTheme.RequiredToFill" parent="Widget.AppTheme.NeWorkOutlinedTextInput">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_required_to_fill_12</item>
    </style>

    <style name="Widget.AppTheme.SectionEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">@dimen/section_size</item>
        <item name="android:padding">@dimen/scrollbar_width</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Widget.AppTheme.ClearAvatarButton" parent="Widget.AppTheme.MenuButton">
        <item name="iconTint">@color/ripple_button</item>
        <item name="iconSize">@dimen/avatar_cancel</item>
        <item name="layout_constraintHeight">@dimen/avatar_cancel</item>
        <item name="layout_constraintWidth">@dimen/avatar_cancel</item>
    </style>

</resources>