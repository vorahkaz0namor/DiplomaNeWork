<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.NeWorkButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/zero_dp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@color/ripple_button</item>
        <item name="layout_constraintHeight">@dimen/constraint_height</item>
        <item name="iconPadding">@dimen/main_indent</item>
        <item name="android:paddingTop">@dimen/zero_dp</item>
        <item name="android:paddingBottom">@dimen/zero_dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.AppTheme.MenuButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="iconPadding">@dimen/zero_dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="tint">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.NeWorkOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="strokeColor">?attr/colorControlNormal</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.AppTheme.NeWorkButton">
        <item name="iconTint">@color/color_like_button</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.NeWorkFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="android:tint">?attr/colorControlNormal</item>
        <item name="android:backgroundTint">@color/ripple_button</item>
        <item name="borderWidth">@dimen/zero_dp</item>
        <item name="android:strokeColor">@color/ripple_button</item>
    </style>

    <style name="Widget.AppTheme.NeWorkOutlinedTextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/ripple_button</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:paddingBottom">@dimen/title_indent</item>
    </style>

    <style name="Widget.AppTheme.NeWorkRoundedOutlined" parent="Widget.AppTheme.NeWorkOutlinedTextInput">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="boxStrokeColor">@color/ripple_button</item>
        <item name="android:focusable">false</item>
    </style>

</resources>