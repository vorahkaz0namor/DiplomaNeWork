<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiplomaNeWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DiplomaNeWork.AppBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/ripple_button</item>
        <item name="popupTheme">@style/Theme.DiplomaNeWork.PopupTheme</item>
    </style>

    <style name="Theme.DiplomaNeWork.PopupTheme" parent="@style/ThemeOverlay.AppCompat.DayNight">
        <item name="android:backgroundTint">@color/toolbar_popup_background</item>
    </style>

</resources>